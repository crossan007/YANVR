{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r", 
        "ts-node/register/transpile-only"
      ],
      "args": ["src/index.ts"],
      "cwd": "${workspaceRoot}/apps/backend",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
}